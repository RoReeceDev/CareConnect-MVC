<%- include('partials/userheader') -%>
<%if(user.role.isNursingHome==true){ %>

    <div class="container">

        <div class="row mt-5">
            <div class="col-6">
                <h2>Welcome <%= user.profile.profileName %</h2>
                        <div>
                            <p><strong>User Name</strong>: <%= user.userName %>
                            </p>
                            <p><strong>Email</strong>: <%= user.email %>
                            </p>
                        </div>
                        <div>
                            <a href="/logout" class="col-3 btn btn-primary">Logout</a>
                            <form action="/delete-account/<%= user._id %>?_method=DELETE" method="POST" class="col-3">
                                <button class="btn btn-primary fa fa-trash" type="submit">Delete Account</button>
                            </form>
                        </div>
            </div>
            <div>
                <div class="row justify-content-center mt-5">
                    <a class="btn btn-primary" href="/board">Check out Volunteer Board</a>
                </div>
                <div class="mt-5">
                    <h2>Add a post</h2>
                    <form action="/event/createEvent" method="POST">
                        <div class="mb-3">
                            <label for="eventName" class="form-label">Name of Event</label>
                            <input type="text" class="form-control" id="eventName" name="eventName">
                        </div>
                        <div class="mb-3">
                            <label for="eventDate" class="form-label">Event Date</label>
                            <input type="date" min={new Date().toISOString().split('T')[0]} class="form-control"
                                id="eventDate" name="eventDate">
                        </div>
                        <div class="mb-3">
                            <label for="sTime" class="form-label">Start Time</label>
                            <input type="time" class="form-control" id="sTime" name="sTime">
                        </div>
                        <div class="mb-3">
                            <label for="eTime" class="form-label">End Time</label>
                            <input type="time" class="form-control" id="eTime" name="eTime">
                        </div>
                        <div class="mb-3">
                            <label for="numNeeded" class="form-label">Volunteers Needed</label>
                            <input type="number" min="0" max="10" class="form-control" id="numNeeded" name="numNeeded">
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>

                </div>
            </div>
            <div class="col-6">
                <h3>Created Volunteer Events</h3>
                <ul class="events">
                    <% for(var i=0; i<events.length; i++) {%>
                        <li class="event">
                            <a href="/event/<%= events[i]._id%>">
                                <div>
                                    <span>Event Name: </span><span class="name">
                                        <%= events[i].name %>
                                    </span>
                                </div>
                                <div>
                                    <div>
                                        <span>Date of Event: </span><span class="msg">
                                            <%= events[i].eventDate %>
                                        </span>
                                    </div>
                                    <div>
                                        <span>Start Time: </span><span class="thumbs">
                                            <%= events[i].startTime %>
                                        </span>
                                        <span>End Time: </span><span class="thumbs">
                                            <%= events[i].endTime %>
                                        </span>
                                    </div>
                                    <div>
                                        <span># of Volunteers Needed: </span><span class="thumbs">
                                            <%= events[i].numNeeded %>
                                        </span>
                                    </div>
                            </a>
                        </li>
                        <% } %>



                </ul>

            </div>
            <% } %>

        </div>
    </div>
    <%if(user.role.isVolunteer==true){ %>
    <div class="container">

            <div class="row mt-5">
                <div class="col-6">
                    <h2>Welcome <%= user.profile.profileName %</h2>
                            <div>
                                <p><strong>User Name</strong>: <%= user.userName %>
                                </p>
                                <p><strong>Email</strong>: <%= user.email %>
                                </p>
                            </div>
                            <div>
                                <a href="/logout" class="col-3 btn btn-primary">Logout</a>
                                <form action="/delete-account/<%= user._id %>?_method=DELETE" method="POST"
                                    class="col-3">
                                    <button class="btn btn-primary fa fa-trash" type="submit">Delete Account</button>
                                </form>
                            </div>
                </div>
                <div>
                    <div class="row justify-content-center mt-5">
                        <a class="btn btn-primary" href="/board">Check out Volunteer Board</a>
                    </div>
                    
                </div>
                <div class="col-6">
                    <h3>Upcoming Volunteer Events</h3>
                    <ul class="events">
                        <% for(var i=0; i<events.length; i++) {%>
                            <li class="event">
                                <a href="/event/<%= events[i]._id%>">
                                    <div>
                                        <span>Event Name: </span><span class="name">
                                            <%= events[i].name %>
                                        </span>
                                    </div>
                                    <div>
                                        <div>
                                            <span>Date of Event: </span><span class="msg">
                                                <%= events[i].eventDate %>
                                            </span>
                                        </div>
                                        <div>
                                            <span>Start Time: </span><span class="thumbs">
                                                <%= events[i].startTime %>
                                            </span>
                                            <span>End Time: </span><span class="thumbs">
                                                <%= events[i].endTime %>
                                            </span>
                                        </div>
                                        <div>
                                            <span># of Volunteers Needed: </span><span class="thumbs">
                                                <%= events[i].numNeeded %>
                                            </span>
                                        </div>
                                </a>
                            </li>
                            <% } %>



                    </ul>

                </div>
            </div>
    </div>
    <% } %>

    <%- include('partials/footer') -%>