<%- include('partials/userheader') -%>

<main class="container">
    <div>
    <ul class="events">
         
        <% for(var i=0; i<events.length; i++) {%>
          <li class="event">
            <div>
            <p><%= events[i].name %></p>
            <p><%= events[i].numNeeded %></p>
            <% if ((events[i].numNeeded > 0) && (user.role.isNursingHome===false)) { %>
            <form  action="/nh/joinEvent/<%= events[i].id %>?_method=PUT"
                method="POST">
                <button>Volunteer For Event</button>
            </form>
            <div>
          </li>
          <% } %>
          <% } %>


      </ul>
    </div>
</main>
    

<%- include('partials/footer') -%>