<%- include('partials/userheader') -%>
<div class="container">
  <div class="row justify-content-center mt-5">
    <div>
    <div class="col-6">
      <h2><%= event.name %></h2>
    </div>
    <div class="col-3 mt-5">
      <span>Date of Event:</span>
      <p><%= event.eventDate %></p>
    </div>
    <div class="col-3 mt-5">
      <span>Start Time:</span><p><%= event.startTime %></p>
    </div>
    <div class="col-3 mt-5">
      <span>End Time:</span> <p><%= event.endTime%></p>
    </div>
    </div>
    <div>
      <h4>Registered Volunteers</h4>
      <div class="col-3 mt-5">
        <span>Volunteer spots open:</span> <span><%= event.numNeeded %></span>
      </div>
    <ul>
      <% for(var i=0; i<volunteers.length; i++) {%>
        <li class="col-6 justify-content-between mt-5">
          <%= volunteers[i].profile.profileName%>
        </li>
      <% } %>
    </ul>
    </div>
    <div class="col-6 mt-5">
      <a class="btn btn-primary" href="/profile">Return to Profile</a>
      <a class="btn btn-primary" href="/board">Check Volunteer Board</a>
      <%if(event.user == user.id){ %>
        <form
          action="/event/deleteEvent/<%= event.id %>?_method=DELETE"
          method="POST"
          class=""
        >
          <button class="btn btn-primary fa fa-trash" type="submit">Delete Event</button>
        </form>
        <%}%>
    </div>
  </div>
</div>

<%- include('partials/footer') -%>
