<%- include('partials/userheader') -%>

    <main class="container">
        <div id="fh5co-portfolio">
            <div class="container">
                <div class="row animate-box">
                    <div class="col-sm-7 col-md-offset-2 text-center fh5co-heading">
                        <h2>Profile</h2>
                        <p>Set up your profile!</p>
                    </div>
                </div>
                <div class="col-sm-9 col-sm-push-1 animate-box">
                    <div class="row">

                        <% if (user.role.isVolunteer===true) { %>
                        <form action="/editprofile/create/<%= user.id %>?_method=PUT"  method="POST">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Name" name="volunteerName">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="City, State"
                                        name="volunteerCityState">
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Zipcode"
                                        name="volunteerZipcode">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input type="number" min="16" max="50" class="form-control" placeholder="Age"
                                        name="volunteerAge">
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <textarea name="volunteerBio" class="form-control" id="" cols="30" rows="7"
                                        placeholder="Add a short bio about yourself"></textarea>
                                </div>
                            </div>
                            <div class="col-md-12 text-center">
                                <div class="form-group">
                                    <input type="submit" class="btn btn-primary">
                                </div>
                            </div>
                        </form>
                        <% } %>
                        <% if (user.role.isNursingHome===true){ %>
                        <form action="/editprofile/create/<%= user.id %>?_method=PUT"  method="POST">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Facility Name" name="facilityName">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Contact Name" name="contactName">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Facility Number" name="facilityPhone">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Address"
                                        name="facilityAddress">
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="City, State"
                                        name="facilityCityState">
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Zipcode"
                                        name="facilityZipcode">
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <textarea name="facilityBio" class="form-control" id="" cols="30" rows="7"
                                        placeholder="Add a short bio about your facility"></textarea>
                                </div>
                            </div>
                            <div class="col-md-12 text-center">
                                <div class="form-group">
                                    <input type="submit" class="btn btn-primary">
                                </div>
                            </div>
                        </form>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </main>


    <%- include('partials/footer') -%>