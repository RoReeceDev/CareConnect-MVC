<%- include('partials/userheader') -%>
    <%if(user.role.isNursingHome==true){ %>

        <div class="container">

            <div class="row mt-5 profile-cont">
                <div class="profile-head">

                    <h2>Welcome to your profile, <%= user.profile.profileName %>!</h2>
                    <div>
                        <a href="/logout" class="col-3 btn btn-primary">Logout</a>
                    </div>
                </div>
                <div class="profile-info">
                    <div>
                        <p><strong>User Name</strong>: <%= user.userName %>
                        </p>
                        <p><strong>Email</strong>: <%= user.email %>
                        </p>
                        <p><strong>Contact</strong>: <%= user.profile.contactName %>
                        </p>
                        <p><strong>Facility Number</strong>: <%= user.profile.contactNumber %>
                        </p>
                        <p><strong>Bio</strong>: <%= user.profile.bio %>
                        </p>
                        <div>
                            <p><strong>Address</strong>: <%= user.profile.address %>
                            </p>
                            <p><strong>Address</strong>: <%= user.profile.cityState %>
                            </p>
                            <p><strong>Address</strong>: <%= user.profile.zipcode %>
                            </p>
                        </div>
                    </div>

                    <div class="profile-btns">
                        <form action="/delete-account/<%= user._id %>?_method=DELETE" method="POST" class="col-3">
                            <button class="btn btn-primary fa fa-trash" type="submit">Delete Account</button>
                        </form>
                        <a class="btn btn-primary editbtn">Edit Profile</a>
                    </div>
                    <div>
                        <div class="editing hidden">
                            <h4>Update Your Profile</h4>
                            <form action="/editprofile/edit/<%= user._id %>?_method=PUT" method="POST">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <input type="text" class="form-control" placeholder="Facility Name"
                                            name="editFacilityName" value=" <%= user.profile.profileName %>">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <input type="text" class="form-control" placeholder="Contact Name"
                                            name="editContactName"  value=" <%= user.profile.contactName %>">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <input type="text" class="form-control" placeholder="Facility Number"
                                            name="editFacilityPhone"  value=" <%= user.profile.contactNumber %>">

                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <input type="text" class="form-control" placeholder="Address"
                                            name="editFacilityAddress" value=" <%= user.profile.address %>">
                                    </div>
                                    <div class="form-group">
                                        <input type="text" class="form-control" placeholder="City, State"
                                            name="editFacilityCityState" value=" <%= user.profile.cityState %>">
                                    </div>
                                    <div class="form-group">
                                        <input type="text" class="form-control" placeholder="Zipcode"
                                            name="editFacilityZipcode" value=" <%= user.profile.zipcode %>">
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <textarea name="editFacilityBio" class="form-control" id="" cols="30" rows="7"
                                            placeholder="Add a short bio about your facility"><%= user.profile.bio %></textarea>
                                    </div>
                                </div>
                                <div class="col-md-12 text-center">
                                    <div class="form-group">
                                        <input type="submit" class="btn btn-primary">
                                    </div>
                                </div>
                            </form>

                        </div>
                    </div>

                </div>
                <% } %>

                    <%if(user.role.isVolunteer==true){ %>
                        <div class="container">

                            <div class="row mt-5 profile-cont">
                                <div class="profile-head">
                
                                    <h2>Welcome to your profile, <%= user.profile.profileName %>!</h2>
                                    <div>
                                        <a href="/logout" class="col-3 btn btn-primary">Logout</a>
                                    </div>
                                </div>
                                <div class="profile-info">
                                    <div>
                                        <p><strong>User Name</strong>: <%= user.userName %>
                                        </p>
                                        <p><strong>Email</strong>: <%= user.email %>
                                        </p>
                                        <p><strong>Age</strong>: <%= user.profile.userAge %>
                                        </p>
                                        <p><strong>Bio</strong>: <%= user.profile.bio %>
                                        </p>
                                        <div>
                                            <p><strong>Address</strong>: <%= user.profile.cityState %>
                                            </p>
                                            <p><strong>Address</strong>: <%= user.profile.zipcode %>
                                            </p>
                                        </div>
                                    </div>
                
                                    <div class="profile-btns">
                                        <form action="/delete-account/<%= user._id %>?_method=DELETE" method="POST" class="col-3">
                                            <button class="btn btn-primary fa fa-trash" type="submit">Delete Account</button>
                                        </form>
                                        <a class="btn btn-primary editbtn">Edit Profile</a>
                                    </div>
                                    <div>
                                        <div class="editing hidden">
