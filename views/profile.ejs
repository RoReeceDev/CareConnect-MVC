                                            <form action="/editprofile/edit/<%= user._id %>?_method=PUT" method="POST">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <input type="text" class="form-control" placeholder="Volunteer Name"
                                                            name="editVolunteerName" value=" <%= user.profile.profileName %>">
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <input type="text" class="form-control" placeholder="City, State"
                                                            name="editVolunteerCityState" value=" <%= user.profile.cityState %>">
                                                    </div>
                                                    <div class="form-group">
                                                        <input type="text" class="form-control" placeholder="Zipcode"
                                                            name="editVolunteerZipcode" value=" <%= user.profile.zipcode %>">
                                                    </div>
                                                </div>
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <textarea name="editVolunteerBio" class="form-control" id="" cols="30" rows="7"
                                                            placeholder="Add a short bio about your facility"><%= user.profile.bio %></textarea>
                                                    </div>
                                                </div>
                                                <div class="col-md-12 text-center">
                                                    <div class="form-group">
                                                        <input type="submit" class="btn btn-primary">
                                                    </div>
                                                </div>
                                            </form>
                
                                        </div>
                                    </div>
                
                                </div>
                                <% } %>
                            <div class="row justify-content-center mt-5">
                                <a class="btn btn-primary" href="/board">Check out Volunteer Board</a>
                            </div>
                                <%- include('partials/footer') -%>